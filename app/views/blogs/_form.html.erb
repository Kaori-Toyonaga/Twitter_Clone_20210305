<%= form_with(model: @blog, local: true) do |form| %>
　<% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>つ言い方間違ってるよ。</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="blog">
    <div class="blog_title">
      <%= form.text_area :title, placeholder: "なんについて？" , style: "border: none; font-size: 10px" %>
    </div>
    <div class="blog_content">
      <%= form.text_area :content, placeholder: "言ってみる？" , style: "border: none; font-size: 10px" %>
    </div>
  </div>
  <%= form.submit "言ってみる" %>
  <% end %>
  <br>
  <br>
  <%= link_to "今まで何言ったっけ？", blogs_path %>
